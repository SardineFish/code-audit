{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/test/bin/diff_tree",
            "args": [
                "./test/data/syntaxA.c",
                "./test/data/syntaxB.c"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "windows": {
                "program": "/mnt/f/Project/C++/code-audit/test/bin/ast_diff",
                "cwd": "/mnt/f/Project/C++/code-audit",
                "pipeTransport": {
                    "pipeCwd": "",
                    "pipeProgram": "C:\\Windows\\sysnative\\bash.exe",
                    "pipeArgs": ["-c"],
                    "debuggerPath": "/usr/bin/gdb"
                },
                "sourceFileMap": {
                    "/mnt/f": "F:\\"
                }
            },
            "linux": {
                "program": "${workspaceRoot}/test/bin/diff_tree",
                "cwd": "${workspaceFolder}"
            }
            
        }
    ]
}